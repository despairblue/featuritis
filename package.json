{
  "name": "hello-reason",
  "version": "0.1.0",
  "description": "Example Reason Esy Project",
  "license": "MIT",
  "esy": {
    "build": "dune build -p #{self.name}",
    "buildDev":
      "refmterr dune build --promote-install-files --root . --only-package #{self.name}",
    "NOTE": "Optional release Section. Customizes result of `esy release`",
    "release": { "bin": [ "Hello" ] },
    "buildEnv": { "ODOC_SYNTAX": "re" }
  },
  "scripts": {
    "start": "esy x App",
    "test": "esy x App --checkhealth",
    "doc": "esy dune build @doc",
    "format": "esy dune build @fmt --auto-promote"
   },
  "dependencies": {
    "@esy-ocaml/reason": "3.6.0",
    "@opam/base": "v0.13.1",
    "@opam/dune": "*",
    "@opam/stdio": "v0.13.0",
    "@opam/yojson": "1.7.0",
    "@reason-native/console": "*",
    "@reason-native/pastel": "*",
    "esy-macdylibbundler": "^0.4.5",
    "fetch-native-lwt":
      "lessp/fetch:fetch-native-lwt.json#0774bc989493f78f87e1689731f41f2a83ea0b78",
    "graphql_ppx":
      "github:reasonml-community/graphql_ppx:esy.json#abdcc90a3d0824a2a41428d31217e312271136df",
    "ocaml": "~4.8.1000",
    "ocaml-syntax-shims":
      "github:ocaml-ppx/ocaml-syntax-shims:ocaml-syntax-shims.opam#38a6dd23543d9c4c3678fc6741962832fd539877",
    "revery": "github:revery-ui/revery#1196f1b"
  },
  "devDependencies": {
    "@opam/merlin": "*",
    "@reason-native/rely": "*",
    "refmterr": "*",
    "ocaml": "~4.8.1000",
    "@opam/odoc": "*"
  },
  "resolutions": {
    "@esy-ocaml/libffi": "esy-ocaml/libffi#c61127d",
    "@esy-ocaml/reason": "3.6.0",
    "@opam/cmdliner": "1.0.2",
    "esy-cmake": "prometheansacrifice/esy-cmake#2a47392def755",
    "esy-skia": "revery-ui/esy-skia#91b10c9",
    "reason-skia": "revery-ui/reason-skia#642e5bdb09de460e47c16f435600842c068d6287"
  }
}
