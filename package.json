{
  "name": "hello-reason",
  "version": "0.1.0",
  "description": "Example Reason Esy Project",
  "license": "MIT",
  "esy": {
    "build": "dune build -p #{self.name}",
    "buildDev": "refmterr dune build --promote-install-files --root . --only-package #{self.name}",
    "NOTE": "Optional release Section. Customizes result of `esy release`",
    "release": {
      "bin": [
        "App"
      ]
    },
    "buildEnv": {
      "ODOC_SYNTAX": "re",
      "MACOSX_DEPLOYMENT_TARGET": "10.12"
    }
  },
  "scripts": {
    "dev:watch": "watchman-make -p '**/*.re' --run 'esy build'",
    "doc": "esy dune build @doc",
    "format": "esy dune build @fmt --auto-promote",
    "start": "esy x App",
    "test": "esy x App --checkhealth"
  },
  "dependencies": {
    "@esy-ocaml/reason": "3.6.0",
    "@opam/base": "v0.13.1",
    "@opam/dune": "*",
    "@opam/stdio": "v0.13.0",
    "@opam/yojson": "1.7.0",
    "@reason-native/console": "*",
    "@reason-native/pastel": "*",
    "esy-macdylibbundler": "^0.4.5",
    "fetch-native-lwt": "*",
    "graphql_ppx": "github:reasonml-community/graphql_ppx:esy.json#abdcc90a3d0824a2a41428d31217e312271136df",
    "ocaml": "~4.8.1000",
    "ocaml-syntax-shims": "github:ocaml-ppx/ocaml-syntax-shims:ocaml-syntax-shims.opam#38a6dd23543d9c4c3678fc6741962832fd539877",
    "revery-graphql-hooks": "*",
    "revery": "*"
  },
  "devDependencies": {
    "@opam/merlin": "*",
    "@opam/ocaml-lsp-server": "ocaml/ocaml-lsp:ocaml-lsp-server.opam",
    "@opam/odoc": "*",
    "@reason-native/rely": "*",
    "ocaml": "~4.8.1000",
    "refmterr": "*"
  },
  "resolutions": {
    "@esy-ocaml/libffi": "esy-ocaml/libffi#590b041",
    "@esy-ocaml/reason": "3.6.0",
    "@opam/cmdliner": "1.0.2",
    "esy-cmake": "prometheansacrifice/esy-cmake#2a47392def755",
    "esy-skia": "revery-ui/esy-skia#07c13a9",
    "fetch-native-lwt": "lessp/fetch:fetch-native-lwt.json#6256b9d43f99476d9184957ab6286568822e9b5d",
    "revery-graphql-hooks": "despairblue/revery-graphql-hooks#20fbbb1b4e8d13edc820b7648ea259d9ef14c925",
    "revery": "github:revery-ui/revery#e3448c2"
  }
}
